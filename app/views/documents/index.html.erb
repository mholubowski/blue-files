<h1>Documents#index</h1>
<p>All Document</p>
<h2 style="color:red;">TODO should display just documents of signed in account</h2>
<p style="color:green">category: <%= current_account.category %></p>
<p style="color:green">sub_category: <%= current_account.sub_category %></p>
<p style="color:green">sub_sub_category: <%= current_account.sub_sub_category %></p>

<table id="documentsTable" class="display">
	<thead>
	<tr>
		<th><%= current_account.category %></th>
		<th><%= current_account.sub_category %></th>
		<th><%= current_account.sub_sub_category %></th>
		<th>Type</th>
		<th>Title</th>
	</tr>
	</thead>

<% if signed_in? %>
	<tbody>
	<% @current_account_documents.each do |doc| %>
	<tr>
		<td><%= doc.category %></td>
		<td><%= doc.sub_category %></td>
		<td><%= doc.sub_sub_category %></td>
		<td><%= doc.type_of_document %></td>
		<td><%= link_to doc.title, doc %></td>
	</tr>
	<% end %>
	</tbody>
<% end %>

</table>