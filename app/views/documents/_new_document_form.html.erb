<% @document = current_account.documents.build if signed_in? %>
<div id="<%= @document.object_id %>" class="hiddenDocForm theHider">
<div id="<%= @document.object_id %>">
	<hr>
	<%= form_for @document, validate: true, remote: true do |f| %>



	<%= f.hidden_field :hidden, value: @document.object_id  %>

	<%= render 'shared/form_error_messages', object: f.object %>
	
	<%= f.file_field :document_file %>
	<p><small>document.id <%= @document.object_id %></small></p>
	
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :type_of_document %>
	<%= f.select :type_of_document, ['Test','Essay','Homework', 'Other'] %>

	<%= f.label current_account.schedule_type == "Quarter" ? "Quarter" : "Semester" %>
	<%= f.select :quarter, ['Fall 2012', 'Fall 2011', 'Fall 2010','Winter 2012', 'Winter 2011',
							'Winter 2010','Spring 2012', 'Spring 2011', 'Spring 2010' ] if current_account.schedule_type == "Quarter" %>
	<%= f.select :quarter, ['Fall 2012', 'Fall 2011', 'Fall 2010','Spring 2012', 'Spring 2011',
						    'Spring 2010' ] if current_account.schedule_type == "Semester" %>								

	<!-- Hidden # of pages -->
	<%= f.hidden_field :number_of_pages, value: 3 %>

	<%= f.label current_account.category %>
	<%= f.text_field :category %>

	<%= f.label current_account.sub_category %>
	<%= f.text_field :sub_category %>

	<%= f.label current_account.sub_sub_category %>
	<%= f.text_field :sub_sub_category %>

	<!-- removed for HEROKU -->
	 <!-- f.label "Comments" 
	 f.text_field :original_comment  -->

	<br><br>
	<div style="display:;">
		<%= f.submit "Upload Document", disable_with: "Uploading Document..", class: "btn btn-large btn-primary" %>
	</div>
</div>
	<div class="addThisForm well"><p>Add File</p> <i class="icon-file-alt"></i></div>
	<% end %>
	<hr>
</div>