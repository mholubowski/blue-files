<div class="recent-documents-stream">

	<ul>
		<% @recent_documents.each do |doc| %>
		<a href="/documents/<%= doc.id %>">
		<li>
			<p class="main"><%= doc.category + " " + doc.sub_category %> , <small><%= doc.title  %></small></p>

			<p class="timestamp">Added <%= time_ago_in_words(doc.created_at) %> ago.</p>
		</li>
		</a>
		<% end %>
	</ul>
	<h4 class="view-all"><%= link_to "View All recently added (CHANGE)", documents_path %></h4>
</div>