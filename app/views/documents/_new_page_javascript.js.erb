$.fn.showOne = function(thiss,speed){
	

	$(this).parent().parent().animate({left:'-=800'}, 457,'swing');
	$(this).parent().parent().removeClass('hiddenDocForm');
	$('#addDocForm').animate({bottom:'-=534'}, 457,'swing');
	if ($('.hiddenDocForm').first().length === 0){
			$('#addDocForm').hide(5);
		};
}

