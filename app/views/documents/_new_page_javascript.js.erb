$('.addThisForm').on('click', function(){
	// $(this).parent().hide('slow');
	$(this).parent().animate({right:'-=900'}, 457,'swing');
	$(this).parent().removeClass('hiddenDocForm');
	$(this).hide(100);
	$('#addDocForm').animate({bottom:'-=534'}, 457,'swing');
	if ($('.hiddenDocForm').first().length === 0){
			$('#addDocForm').hide(5);
		};
})


