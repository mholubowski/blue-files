
$.fn.showOne = function(speed){
	$('.hiddenDocForm').first().animate({left:'-=800'}, 457,'swing', function(){$(this).removeClass('hiddenDocForm')});
	$('#addDocForm').animate({bottom:'-=534'}, 457,'swing');
	if ($('.hiddenDocForm').first().length === 0){
			$('#addDocForm').hide(5);
		};
}

$(document).ready(function(){

	$.fn.showOne(500);

});

$('#addDocForm').on('click', function(){
	$.fn.showOne(750);
})


$('#reloadButton').click(function() {
	if (confirm('Reload?')){
		location.reload(true);
	}
});